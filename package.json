{
  "name": "transliterate-bharat",
  "version": "1.0.0",
  "description": "Indian script transliteration application with OCR and camera support",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "start:https": "concurrently \"npm run server\" \"npm run client:https\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "client:https": "cd client && npm run start:https-win",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "cd server && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "create-shortcut": "powershell -ExecutionPolicy Bypass -File create-desktop-shortcut.ps1"
  },
  "keywords": [
    "transliteration",
    "indian-scripts",
    "ocr",
    "react",
    "nodejs",
    "express",
    "devanagari",
    "tamil",
    "bengali"
  ],
  "author": "Transliterate Bharat Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-webcam": "^7.2.0"
  }
}
